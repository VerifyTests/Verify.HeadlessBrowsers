<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <PackageTags>Puppeteer, Verify</PackageTags>
    <SignAssembly>false</SignAssembly>
    <Description>Extends Verify (https://github.com/VerifyTests/Verify) to allow verification of Web UIs via Puppeteer (https://github.com/hardkoded/puppeteer-sharp)</Description>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Argon" Version="0.13.0" />
    <PackageReference Include="PuppeteerSharp" Version="12.0.0" />
    <PackageReference Include="Verify" Version="22.1.4" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" Condition="$(Configuration) == 'Release'" />
    <PackageReference Include="ProjectDefaults" Version="1.0.100" PrivateAssets="all" />
    <Compile Include="..\Verify.Playwright\InnerSocketWaiter.cs" />
  </ItemGroup>
</Project>