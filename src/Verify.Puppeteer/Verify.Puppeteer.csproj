<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net5</TargetFrameworks>
    <PackageTags>Puppeteer, Verify</PackageTags>
    <SignAssembly>false</SignAssembly>
    <Description>Extends Verify (https://github.com/VerifyTests/Verify) to allow verification of Web UIs via Puppeteer (https://github.com/hardkoded/puppeteer-sharp)</Description>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="PuppeteerSharp" Version="5.0.0" />
    <PackageReference Include="Verify" Version="11.20.1" />
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" Condition="$(Configuration) == 'Release'" />
    <PackageReference Include="ProjectDefaults" Version="1.0.56" PrivateAssets="All" />
  </ItemGroup>
</Project>